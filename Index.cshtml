@model IEnumerable<Actividad4Prog3.Models.Estudiante>

@{
    ViewData["Title"] = "Listado de Estudiantes";
}

<h1>Listado de Estudiantes</h1>

<p>
    <a asp-action="Create" class="btn btn-primary">Registrar Nuevo Estudiante</a>
</p>

<table class="table table-bordered table-striped">
    <thead class="thead-dark">
        <tr>
            <th>Matrícula</th>
            <th>Nombre</th>
            <th>Apellido</th>
            <th>Carrera</th>
            <th>Turno</th>
            <th>Tipo de Ingreso</th>
            <th>Género</th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model)
{
        <tr>
            <td>@item.Matricula</td>
            <td>@item.Nombre</td>
            <td>@item.Apellido</td>
            <td>@item.Carrera</td>
            <td>@item.Turno</td>
            <td>@item.TipoIngreso</td>
            <td>@item.Genero</td>
            <td>
                <a asp-action="Edit" asp-route-id="@item.Matricula" class="btn btn-warning btn-sm">Editar</a> |
                <a asp-action="Details" asp-route-id="@item.Matricula" class="btn btn-info btn-sm">Detalles</a> |
                <a asp-action="Delete" asp-route-id="@item.Matricula" class="btn btn-danger btn-sm">Eliminar</a>
            </td>
        </tr>
}
    </tbody>
</table>
